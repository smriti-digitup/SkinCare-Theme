<script>
 document.addEventListener("DOMContentLoaded", function () {
  const footer = document.querySelector('.parallax-footer');

  if (footer) {
    window.addEventListener("scroll", function () {
      const rect = footer.getBoundingClientRect();
      const scrollTop = window.scrollY || window.pageYOffset;
      const offsetTop = footer.offsetTop;
      const windowHeight = window.innerHeight;

      // Only trigger parallax when footer is in view
      if (scrollTop + windowHeight >= offsetTop && scrollTop <= offsetTop + footer.offsetHeight) {
        const speed = 0.3; // Adjust speed of movement
        const move = (scrollTop - offsetTop) * speed;

        footer.style.backgroundPosition = `center ${move}px`;
      }
    });
  }
});
</script>


