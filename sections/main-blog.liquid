{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="main-blog page-width section-{{ section.id }}-padding page-width">
    <nav class="breadcrumb b2 regular" role="navigation" aria-label="breadcrumbs">
      <a href="{{ routes.root_url }}" title="Home">Home</a>
      <span class="breadcrumb__separator" aria-hidden="true">â€º</span>
      <span>{{ blog.title | escape }}</span>
    </nav>
    {%- if section.settings.banner_image != blank or section.settings.banner_image_mobile != blank -%}
  <div class="main-blog-banner">
    <style>
      .main-blog-banner {
        background-image: url({{ section.settings.banner_image | img_url: '1800x' }});
        background-size: cover;
        background-position: center;
      }

      @media (max-width: 749px) {
        .main-blog-banner {
          background-image: url({{ section.settings.banner_image_mobile | img_url: '750x' }});
        }
      }
    </style>

    <div class="main-blog-banner__content">
      {%- if section.settings.banner_heading != blank -%}
        <h1 class="main-blog-banner__heading semibold">{{ section.settings.banner_heading }}</h1>
      {%- endif -%}
      {%- if section.settings.banner_subheading != blank -%}
        <p class="main-blog-banner__subheading b1 semibold">{{ section.settings.banner_subheading }}</p>
      {%- endif -%}
      {%- if section.settings.banner_subtext != blank -%}
        <p class="main-blog-banner__subtext b1">{{ section.settings.banner_subtext }}</p>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}


    <h2 class="home-title regular section-spacing title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ blog.title | escape }}
    </h2>

    <div class="blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}">
      {%- for article in blog.articles -%}
        <div class="blog-article-horizontal">
    <div class="blog-article-horizontal__image">
      <img src="{{ article.image | img_url: '800x' }}" alt="{{ article.title }}">
    </div>
    
  <div class="blog-article-horizontal__content">
    <h4 class="semibold">{{ article.title }}</h4>
    <p class="article-meta b2 regular">
      {{ article.published_at | date: "%d %b %Y" }}{% if article.author != blank %} | By {{ article.author }}{% endif %}
    </p>
    <div class="article-excerpt b2 regular">{{ article.content | strip_html | truncatewords: 60 }}</div>
    <div class="article-tags">
      {%- for tag in article.tags limit: 3 -%}
        <span class="tag">{{ tag }}</span>
      {%- endfor -%}
    </div>
    <a href="{{ article.url }}" class="button button--primary">Read More</a>
  </div>
</div>

      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 and paginate.current_page < paginate.pages -%}
  <div id="load-more-wrapper" style="text-align:center; margin-top: 2rem;">
  <button
    id="load-more-btn"
    type="button"
    data-next-page="{{ paginate.current_page | plus: 1 }}"
    data-total-pages="{{ paginate.pages }}"
    data-blog-url="{{ request.path }}"
    aria-label="load-more-button"
    class="load-more-button b2 semibold">
    Load More Articles
  </button>
</div>
{%- endif -%}


  </div>
{%- endpaginate -%}

<script>
  document.addEventListener('DOMContentLoaded', function () {
  const loadMoreBtn = document.getElementById('load-more-btn');
  const blogWrapper = document.getElementById('blog-articles-wrapper');
  const sortSelect = document.getElementById('sort-options');
  let sortOption = 'date_desc';

  // Load More Click
  loadMoreBtn?.addEventListener('click', function () {
    const nextPage = this.getAttribute('data-next-page');
    const totalPages = this.getAttribute('data-total-pages');
    const blogUrl = this.getAttribute('data-blog-url');

    fetch(`${blogUrl}?page=${nextPage}&sort=${sortOption}&view=ajax`)
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const newArticles = doc.querySelector('#blog-articles-wrapper').innerHTML;
        blogWrapper.insertAdjacentHTML('beforeend', newArticles);

        const newPage = parseInt(nextPage) + 1;
        if (newPage <= totalPages) {
          loadMoreBtn.setAttribute('data-next-page', newPage);
        } else {
          loadMoreBtn.style.display = 'none';
        }
      });
  });

  // Sorting Change
  sortSelect?.addEventListener('change', function () {
    sortOption = this.value;
    const blogUrl = loadMoreBtn.getAttribute('data-blog-url');

    fetch(`${blogUrl}?sort=${sortOption}&view=ajax`)
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const newArticles = doc.querySelector('#blog-articles-wrapper').innerHTML;
        blogWrapper.innerHTML = newArticles;

        const newLoadMoreBtn = doc.querySelector('#load-more-btn');
        if (newLoadMoreBtn) {
          loadMoreBtn.setAttribute('data-next-page', newLoadMoreBtn.getAttribute('data-next-page'));
          loadMoreBtn.style.display = 'block';
        } else {
          loadMoreBtn.style.display = 'none';
        }
      });
  });
});

</script>


