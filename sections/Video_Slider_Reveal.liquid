  "tag": "section",
  "class": "section",
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Autoplay Video Section",
      "label": "Heading"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Shopify Video (Desktop)"
    },
    {
      "type": "video",
      "id": "video_mobile",
      "label": "Shopify Video (Mobile)"
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Loop Video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Slide Image (Mobile)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Your Slide Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Slide Text",
          "default": "Your slide description goes here."
        },
        {
          "type": "product",
          "id": "product",
          "label": "Featured Product"
        },
        {
          "type": "text",
          "id": "product_for",
          "label": "Product For",
          "default": "Skin"
        },
        {
          "type": "text",
          "id": "product_concern",
          "label": "Product Concern",
          "default": "Face Care"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "product_offer_text",
          "label": "Product Offer Text",
          "default": "Extra 10% Off on first purchase"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Autoplay Video + Reveal"
    }
  ]
}
