{%- assign visible_blocks = section.blocks | slice: 0, 5 -%}

<style>
  .announcement-marquee {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    background: var(--color-background);
    color: #fff;
    height: 40px; /* ðŸ‘ˆ fix CLS: set a stable height */
    line-height: 40px; /* aligns text vertically */
  }

  .announcement-marquee__inner {
    display: inline-block;
    padding-left: 100%; /* ðŸ‘ˆ ensures smooth scrolling from right */
    animation: scroll-left 15s linear infinite;
    will-change: transform; /* performance optimization */
  }

  /* Pause animation on hover */
  .announcement-marquee:hover .announcement-marquee__inner {
    animation-play-state: paused;
  }

  .announcement-message {
    display: inline-block;
    margin: 0 2rem;
    font-size: 14px;
    white-space: nowrap; /* prevents wrapping */
  }

  .separator {
    margin: 0 0.5rem;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>


<div class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} utility-bar--bottom-border{% endif %}">
  <div class="page-width utility-bar__grid">
    {%- if visible_blocks.size > 0 -%}
      <div class="announcement-bar announcement-marquee" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
        <div class="announcement-marquee__inner">
          {%- for block in visible_blocks -%}
            {%- if block.settings.text != blank -%}
              <span class="announcement-message" {{ block.shopify_attributes }}>
                {%- if block.settings.link != blank -%}
                  <a href="{{ block.settings.link }}" class="link link--text">{{ block.settings.text }}</a>
                {%- else -%}
                  {{ block.settings.text }}
                {%- endif -%}
              </span>
               {%- unless forloop.last -%}
               <span class="separator"> | </span>
                {%- endunless -%}
            {%- endif -%}
          {%- endfor -%}
         
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Marquee Announcement Bar",
  "max_blocks": 10,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "Show line separator"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free shipping on orders over â‚¹500!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
