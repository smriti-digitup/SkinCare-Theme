      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "color",
      "id": "testimonial_background",
      "label": "Background Color",
      "default": "#fafafa"
    },
    {
      "type": "color",
      "id": "testimonial_textcolor1",
      "label": "Text Color1",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "testimonial_textcolor2",
      "label": "Text Color2",
      "default": "#232323"
    },

    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
