        {
          "type": "image_picker",
          "id": "user_image",
          "label": "Customer Image",
          "info": "Size: 50px X 50px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Stephan Robot"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Location"
        },
        {
          "type": "text",
          "id": "disc",
          "label": "discription",
          "default": "Terimakasih banyak, kini ruanganku menjadi lebih mewah dan terlihat mahal"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Review with product",
      "blocks": [
        {
          "type": "testimonials_block"
        },
        {
          "type": "testimonials_block"
        },
        {
          "type": "testimonials_block"
        },
        {
          "type": "testimonials_block"
        }
      ]
    }
  ]
}
{% endschema %}
