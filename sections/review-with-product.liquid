  "name": "Review with product",
  "tag": "section",
  "class": "bannerwithtestimonial",
  "settings": [
    {
      "type": "header",
      "content": "Testimonial Settings"
    },
    {
      "type": "text",
      "id": "testtitle",
      "label": "Heading",
      "default": "Our Testimonials"
    },
    {
      "type": "text",
